<h1>New Game</h1>

<%= form_with model: @game, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, value: params[:title] %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :release_date %>
    <%= form.date_select :release_date %>
  </div>
  <div>
    <%= form.hidden_field :rawg_id, value: params[:rawg_id] %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', games_path %>
